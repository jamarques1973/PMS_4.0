def _segmentar(_):
    if not (STATE.exists('X') and STATE.exists('Y') and STATE.exists('FECHAS')):
        LOGGER.error('Primero carga los datos (X, Y, FECHAS).')
        with out_segment:
            clear_output(wait=True)
            display(widgets.HTML("<span style='color:red;'>‚ùå Debes cargar X, Y y FECHAS antes de segmentar.</span>"))
        return

    X = STATE.get('X')
    Y = STATE.get('Y')
    FECHAS = STATE.get('FECHAS')

    try:
        strat = Y if seg_stratify.value else None
        X_train, X_test, Y_train, Y_test, F_train, F_test = train_test_split(
            X, Y, FECHAS,
            test_size=float(seg_test_size.value),
            random_state=int(seg_random_state.value),
            stratify=strat
        )
        # Guardar en estado
        STATE.set('X_train', X_train, module='Segmentaci√≥n', description='Matriz X (train)')
        STATE.set('X_test',  X_test,  module='Segmentaci√≥n', description='Matriz X (test)')
        STATE.set('Y_train', Y_train, module='Segmentaci√≥n', description='Vector Y (train)')
        STATE.set('Y_test',  Y_test,  module='Segmentaci√≥n', description='Vector Y (test)')
        STATE.set('FECHAS_train', F_train, module='Segmentaci√≥n', description='Fechas (train)')
        STATE.set('FECHAS_test',  F_test,  module='Segmentaci√≥n', description='Fechas (test)')

        resumen = pd.DataFrame({
            'set': ['train','test'],
            'n':   [len(X_train), len(X_test)]
        })
        with out_segment:
            clear_output(wait=True)
            display(widgets.VBox([
                widgets.HTML("<div class='pms-title'>üîÄ Segmentaci√≥n Train/Test</div>"),
                widgets.HTML("<div class='pms-hint'>Segmentaci√≥n realizada correctamente.</div>"),
                resumen
            ]))
        LOGGER.info('Segmentaci√≥n realizada con √©xito')
    except Exception as e:
        LOGGER.error(f'Error segmentando: {e}')
        with out_segment:
            clear_output(wait=True)
            display(widgets.HTML(f"<span style='color:red;'>‚ùå {str(e)}</span>"))

